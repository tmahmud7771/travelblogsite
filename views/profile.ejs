<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog site</title>
    <%- include("./partials/stylelink") %>
    <link rel="stylesheet" href="/stylesheets/blogshow.css">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <style>
        .main {
            display: block;
        }
    </style>
</head>
<body>
    <%- include("./partials/navbar") %>
    <div class="container">
        <div class="pro-head">
            <div class="background">
                <img src="<%= user.background %>">
            </div>
        <div class="pro-picture">
            <img src="<%= user.image %>" alt="">
        </div>
        </div>
        <div class="pro-body">
            <div class="pro-grid-item1">
                <div class="pro-stats">
                    <h4><%= user.username %></h4>
                    <!-- <div class="follower">
                        <p>30</p>
                        <h5>Followers</h5>
                    </div> -->
                    <!-- <div class="following">
                        <p>20</p>
                        <h5>Following</h5>
                    </div> -->
                    <div class="likes">
                        <p><%= blogs.length %></p>
                        <h5>Blogs</h5>
                    </div>
                </div>
                <div class="bio-link">
                    <a><h4 id="onclickbio">Watch Bio</h4></a>
                </div>
                <% if(currentUser && user.equals(currentUser._id)) { %>
                    <div class="user-settings">
                        <a href="/users/<%= user._id %>/edit"><h4> <i class="fas fa-user-cog"></i>&nbsp; user settings</h4></a> 
                    </div>
                <% } %>

            </div>
            <div class="pro-grid-item2">
                <div class="bio" data-aos="flip-down">
                    <h4>About</h4>
                    <p><%= user.bio %></p>
                </div>
                <% blogs.forEach(function(blog){ %>
                    <div class="container">
                        <div class="blog-posts">
                                <div class="blog-post" data-aos="flip-up" data-aos-duration="1000">
                                    <div class="blog-image">
                                        <img src="<%= blog.image%>" alt="blog-image">
                                    </div>
                                    <div class="blog-infor">
                                        <h3><%= blog.title %></h3>
                                        <p><%= blog.description.substring(0, 300) %>...</p>
                                        <a href="/blogs/<%= blog._id %>"><button class="blog-btn-show">Readmore</button></a>
                                    </div>
                                </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>


    <%- include("./partials/scripts") %>


</body>
</html>