<!--------------------- main-section ------------------------------>
<main>
    <section class="site-title">
        <div class="site-background" data-aos="fade-up" data-aos-delay="400">
            <h3>Tours & Travels</h3>
            <h1>Amazing Place On Earth</h1>
            <a href="/blogs"><button class="btn">Explore</button></a>
        </div>
    </section>
        <!-- carousel-blog -->
        <section>
            <div class="blog">
                <div class="container">
                    <div class="owl-carousel owl-theme blog-post">
                        <% blogs.forEach(function(blog){ %>
                        <div class="blog-content" data-aos="fade-right" data-aos-delay="200">
                            <img src="<%= blog.image %>" alt="post">
                            <div class="blog-title">
                                <h3>London Fashion Week's Continued The Evolution</h3>
                                <button class="btn btn-blog"><%= blog.title %></button>
                                <span>2 minutes</span>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </section>
        <!-- carousel-blog --------x-->
    <!-- site items --------------------->
        <section class="container">
            <div class="site-content">
                <div class="posts">
                    <% blogs.forEach(function(blog){ %>
                        <div class="post-content" data-aos="zoom-in" data-aos-delay="200">
                            <div class="post-image">
                                <div >
                                    <img class="img" src="<%= blog.image %>" alt="blog1">
                                </div>
                                <div class="post-info flex-row">
                                    <span><i class="fas fa-user text-gray"></i>&nbsp;&nbsp;<%= blog.author.username %></span>
                                    <span>&nbsp;<i class="far fa-calendar-alt text-gray"></i>&nbsp;&nbsp;<%= blog.date.toDateString() %></span>
                                    <span><%= blog.comments.length %> comments</span>
                                </div>
                            </div>
                            <div class="post-title">
                                <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                                <p><%= blog.description.substring(0, 300) %>...</p>
                               <a href="/blogs/<%= blog._id %>"><button class="btn post-btn">Read More &nbsp;<i class="fas fa-arrow-right text-gray arrow-btn"></i></button></a> 
                            </div>
                        </div>
                        <hr>
                <% }) %>
                    <div class="pagination flex-row">
                        <a href="#"><i class="fas fa-chevron-left"></i></a>
                        <a href="#" class="pages">1</a>
                        <a href="#" class="pages">2</a>
                        <a href="#" class="pages">3</a>
                        <a href="#"><i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </section>
    <!-- site items -x------------------->
</main>
<!-- footer -->
<footer class="footer">
    <div class="container">
        <div class="about-us" data-aos="fade-right" data-aos-delay="200">
